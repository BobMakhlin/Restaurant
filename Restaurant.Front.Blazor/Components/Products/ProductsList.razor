@using Models
@using Restaurant.Front.Blazor.Components.Product

<div class="container">
    <div class="row" id="row-employees">

        @{
            if (Products == null)
            {
                //<Loading />
            }
            else if (Products.Count == 0)
            {
                <p>There are no products right now...</p>
            }
            else
            {
                foreach (var item in Products)
                {
                    <div class="col-3 mt-3">
                        <ProductCard Model="@item"/>
                    </div>
                }
            }
        }

    </div>
</div>

@code {
    [Parameter]
    public List<ProductPoco> Products { get; set; }
}
