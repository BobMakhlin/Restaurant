@page "/status"

@inject HttpClient http
@inject IJSRuntime js

<h3>Status</h3>
<div class="form-group">
    <a class="btn btn-success" href="status/create"><i class="oi oi-plus"></i> Create New</a>
</div>
<br />

@if (Status == null)
{
    <p><em>Loading...</em></p>
}
else if (Status.Count == 0)
{
    <text>No Records Found.</text>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Status)
            {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td><a class="btn btn-primary" href="status/edit/@item.Id">Edit</a></td>
            </tr>
            }
        </tbody>
    </table>
}

@code
{

    List<StatusPoco> Status { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Status = await http.GetFromJsonAsync<List<StatusPoco>>(Urls.BackApiStatus);
    }
}  